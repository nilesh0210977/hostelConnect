<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/main_bg"
    android:weightSum="20">

  <LinearLayout
      android:id="@+id/fl_2"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="294dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="hostelConnect"
      android:layout_gravity="center"
      android:textColor="@color/white"
      android:textSize="35sp"
      android:layout_marginStart="55dp"
      android:textStyle="bold|italic"
      android:backgroundTint="@color/cardview_light_background"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:src="@drawable/hostel" />


  </LinearLayout>

  <LinearLayout
      android:id="@+id/fl_3"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="5"
        tools:ignore="NestedWeights">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_hr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_mess_color"
            android:text="Mess"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Mess"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_weight="5">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_bp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_complaints_color"
            android:text="Complaints"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Complaints"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="5">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_his"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_resource_color"
            android:text="Resources"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Resources"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_weight="5"
        android:orientation="horizontal">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/image_ec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_council_color"
            android:text="Council"
            android:textColor="@color/black"
            tools:ignore="DuplicateIds,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Council"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

  <!-- New FrameLayout for Attendance -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10">

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="10"
        android:orientation="horizontal">

      <FrameLayout
          android:layout_width="204dp"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_attendance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Attendance"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingStart="50dp"
            android:paddingTop="35dp"
            android:paddingEnd="30dp"
            android:paddingBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/leave"
            android:text="Leave"
            android:textColor="@color/black"
            tools:ignore="DuplicateIds,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Leave"
            android:textColor="@color/black"
            android:textStyle="bold" />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>